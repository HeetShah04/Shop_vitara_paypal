<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:padding="5dp">

        <ImageView
            android:id="@+id/cart_ProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/cart_Discount_percent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/discountbadge"
            android:gravity="center"
            android:padding="10dp"
            android:text="18% off"
            android:textColor="@color/white"
            android:textSize="12sp">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/cart_ProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:text="Vitara Water Bottle"
                android:textColor="@color/darkGray"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/cart_Price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Price £ 338"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/cart_MRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Mrp: £ 442"
                android:textColor="@color/lightGray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="Total: £444"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_Discount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="You Saved £ 1500"
                    android:textSize="14sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imgMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/ic_minus">

                </ImageView>

                <TextView
                    android:id="@+id/txtCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp">

                </TextView>

                <ImageView
                    android:id="@+id/imgPlus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:src="@drawable/ic_add">

                </ImageView>

                <ImageView
                    android:id="@+id/imgdel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/red" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>