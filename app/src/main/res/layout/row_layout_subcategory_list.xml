<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        app:cardElevation="15sp">

        <RelativeLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/subcat_image"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/subcat_discountpercent"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/discountbadge"
                android:gravity="center"
                android:padding="10dp"
                android:text="100%"
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="189dp"
                android:layout_height="17dp"
                android:layout_below="@+id/subcat_image"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="VITARAâ¢ green tea maker and detox Borosilicate glass water bottle 550 ML , Detox Water Recipes Ebook"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/subcat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="-1dp"
                android:text="£ 600"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subcat_MRP"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_below="@+id/product_name"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="-5dp"
                android:layout_toEndOf="@+id/subcat_price"
                android:text="£ 1500" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_marginTop="22dp"
                android:numStars="5"
                android:stepSize="0.5" />
<LinearLayout
            android:weightSum="2"
            android:layout_below="@id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_subcat_buy_now"
                android:layout_width="75dp"
                android:layout_height="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="6dp"
                android:background="@color/orange"
                android:text="Buy"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_subcat_add_to_cart"
                android:layout_width="74dp"
                android:layout_height="29dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="6dp"
                android:background="@color/colorPrimary"
                android:text="Cart"
                android:textColor="@color/white"
                android:visibility="visible" />
        </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>